        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/btn_background"
        android:text="Book"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/tv_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Số lượt cập nhật còn : "
        android:textColor="@color/red"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_soluotcapnhat"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_soluotcapnhat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="0"
        android:textColor="@color/red"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tv_show"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/rdo_payment_momo"
            android:layout_width="88dp"
            android:layout_height="30dp"
            android:checked="true"
            android:text="MOMO"
            android:textColor="@color/dark_blue"
            android:textSize="15sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rdo_payment_paypal"
            android:layout_width="92dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:text="PayPal"
            android:textColor="@color/dark_blue"
