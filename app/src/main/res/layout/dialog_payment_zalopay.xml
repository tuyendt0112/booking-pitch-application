<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    android:background="@color/transparent"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:paddingBottom="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">





        <TextView
            android:id="@+id/tv_title_dialog_payment_momo"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:background="#03A9F4"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="Zalo Pay"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:padding="10dp"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/ic_zalopay"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/tv_check_phone_dialog_payment_zalopay"
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:text="* Invalid Phonenumber"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_phone_dialog_payment_zalopay"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:hint="Phone"
            android:drawableStart="@drawable/ic_phone"
            android:drawablePadding="10dp"
            android:drawableTint="@color/edt_color"
            android:textColor="@color/my_blue"
            style="@style/edt_style"/>

        <TextView
            android:visibility="invisible"
            android:id="@+id/tv_check_desc_dialog_payment_momo"
            android:layout_marginTop="5dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:text="* Invalid "
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_desc_dialog_payment_zalopay"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:hint="Description"
            android:drawableStart="@drawable/ic_user_circle"
            android:drawablePadding="10dp"
            android:drawableTint="@color/edt_color"
            android:textColor="@color/my_blue"
            style="@style/edt_style"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_marginTop="15dp"
            android:id="@+id/edt_amount_dialog_payment_zalopay"
            android:layout_width="match_parent"
            android:inputType="number"
            android:layout_height="45dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:hint="Amount"
            android:drawablePadding="10dp"
            android:drawableTint="@color/edt_color"
            android:textColor="@color/my_blue"
            style="@style/edt_style"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_pay_zalopay"
            android:layout_marginTop="10dp"
            android:background="#03A9F4"
            android:layout_width="wrap_content"
            android:text="Pay"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_height="35dp"
            android:layout_gravity="center"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>